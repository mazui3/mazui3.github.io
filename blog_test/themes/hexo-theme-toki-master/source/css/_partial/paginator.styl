.page-nav{
    text-align: center
    font-size: .7em
    padding: .5em
    margin: 5em 0
    font-weight: bold
    & > *{
        margin-right: .5em
        padding: .5em
        border-bottom: 1px dotted #ccc
        text-decoration: none
    }
    a:active,a:link,a:visited{
        color: blue-color
    }
    .current{
        color: #333
    }
}